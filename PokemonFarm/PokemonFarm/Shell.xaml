<Window x:Class="PokemonFarm.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://www.codeplex.com/prism"
        xmlns:common="clr-namespace:PokemonFarm.Common;assembly=PokemonFarm.Common"
        Title="Shell" Height="400" Width="800" Background="Azure">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ContentControl Grid.Row="0" prism:RegionManager.RegionName="{x:Static common:RegionNames.MenuRegion}"/>
        <ContentControl Grid.Row="1" prism:RegionManager.RegionName="{x:Static common:RegionNames.MainRegion}"/>

    </Grid>
</Window>
