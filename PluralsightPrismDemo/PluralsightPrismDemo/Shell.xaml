<Window x:Class="PluralsightPrismDemo.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://www.codeplex.com/prism"
        xmlns:inf="clr-namespace:PluralsightPrismDemo.Common;assembly=PluralsightPrismDemo.Common"
        Title="Shell">
    <DockPanel LastChildFill="True" Background="#1E1E1E">
        <ContentControl DockPanel.Dock="Top" prism:RegionManager.RegionName="{x:Static inf:RegionNames.ToolbarRegion}"/>
        <ContentControl prism:RegionManager.RegionName="{x:Static inf:RegionNames.ContentRegion}"/>
    </DockPanel>
</Window>
